  "bin": {
    "gitlab-pipeline-to-md": "./lib/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "js-yaml": "^4.1.0",
    "yaml": "^2.1.3",
    "zod": "^3.19.1",
    "commander": "^8.3.0"
  },
  "devDependencies": {
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "@types/js-yaml": "^4.0.5"
  }
}
